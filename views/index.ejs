<!DOCTYPE html>
  <html lang="en" dir="ltr">
  <%- include("partials/head.ejs") %>
  <%- include("partials/nav.ejs") %>
  <body>
    <% for(let i = 0; i < reviews.length; i++) { %>
      <div class="reviewpost">
        <%=reviews[i].videoGameTitle%>
        <%=reviews[i].rate%>
        <%=reviews[i].review%>
        <form action="/games/<%=reviews[i].id; %>?_method=DELETE" method="POST">
          <input type="submit" value="delete post">
        </form>
        <a href="/<%=reviews[i].id%>/edit">edit post</a>
      </div>
    <%}%>
  </body>
</html>
